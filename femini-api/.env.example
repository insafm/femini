# Femini API Configuration

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Path (inside container)
DATABASE_PATH=/app/data/femini_api.db

# Logging Level
LOG_LEVEL=INFO

# Femini-Playwright Settings (inherited from worker package)
# These are used by the embedded FeminiApp instance

# Google Credentials (JSON format)
# Example: [{"email":"user1@gmail.com","password":"pass1"},{"email":"user2@gmail.com","password":"pass2"}]
CREDENTIALS=[]

# Credential Mode: random, round_robin, or least_busy
CREDENTIAL_MODE=random

# Browser Settings
HEADLESS=true
SLOW_MO=0

# Download Settings
DOWNLOAD_DIR=/app/downloads
SAVE_RESPONSES=true

# Chat Settings
NEW_CHAT_PER_REQUEST=false

# Image Generation Settings
RETURN_IMAGE_DATA=false